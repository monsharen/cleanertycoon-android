<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical" android:layout_marginBottom="10sp">

    <com.lionsinvests.cleanertycoon.game.components.employeeprofilepic.EmployeeProfileView
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:skinColor="@android:color/black"
        android:background="@android:color/black"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Employee name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/employeeName" android:textStyle="bold" android:textSize="18sp"/>

        <TextView
            android:text="Happiness: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/employeeHappiness"/>
        <TextView
            android:text="Contract: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/employeeContract"/>

    </LinearLayout>

</LinearLayout>


